block settings
	.generator__settings
		h2.h2 Настройки
		//Отправляем/получаем данные через ajax
		form.settings__form&attributes({
			action: "#",
			method: "post"
		})
			fieldset.form__block
				.form__upload-block
					label.p Исходное изображение
					.upload-block__wrap
						//Стилизуем загрузку
						.upload-block__style
							.form__input.style__input Image.png
							.btn.btn--red.btn--upload Загрузить
						//Само поле загрузки, opacity: 0
						input.form__input.input--upload&attributes({
							type: "file",
							name: "original",
							id: "file-original"
						})
				.form__upload-block
					label.p Водяной знак 
					.upload-block__wrap
						//Стилизуем загрузку
						.upload-block__style
							.form__input.style__input Image.png
							.btn.btn--red.btn--upload Загрузить
						//Само поле загрузки, opacity: 0
						input.form__input.input--upload&attributes({
							type: "file",
							name: "watermark",
							id: "file-watermark"
						})
			fieldset.form__block
				.block__header
					p.p Положение
					//Выбор типа наложения 
					.application-types
						button.btn.btn--four-marks.js-use-four 4 Вотермарка
						button.btn.btn--noe-mark.js-use-one 1 Вотермарк
				.positioning
					//Настройки для одного вотермарка 
					.positioning__block.block--coordinates
						.positioning__visual
							//Визуальное отображение расположения вотермарка
							ul.visual__box
								li.visual__cell.cell--current.js-set-cord(data-cord="11")
								li.visual__cell.js-set-cord(data-cord="12")
								li.visual__cell.js-set-cord(data-cord="13")
								li.visual__cell.js-set-cord(data-cord="21")
								li.visual__cell.js-set-cord(data-cord="22")
								li.visual__cell.js-set-cord(data-cord="23")
								li.visual__cell.js-set-cord(data-cord="31")
								li.visual__cell.js-set-cord(data-cord="32")
								li.visual__cell.js-set-cord(data-cord="33")
						.positioning__switch
							.switch__block
								p.p.p--big X
								input#x-cord.form__input.input--switch&attributes({
									type: "text",
									name: "xValue",
									value: "0"
								})
								.switch__controls
									button.btn.btn--control.btn--up.js-move-obj(data-direction="x-up") Больше
									button.btn.btn--control.btn--down.js-move-obj(data-direction="x-down") Меньше
								.switch__block
								p.p.p--big Y
								input#y-cord.form__input.input--switch&attributes({
									type: "text",
									name: "yValue",
									value: "0"
								})
								.switch__controls
									button.btn.btn--control.btn--up.js-move-obj(data-direction="y-up") Больше
									button.btn.btn--control.btn--down.js-move-obj(data-direction="y-down") Меньше	
					.positioning__block.block--borders
						.positioning__visual
							table.visual__table.table--borders
								tbody.table__body
									tr.visual__row
										td.visual__cell
										td.visual__cell
									tr.visual__row
										td.visual__cell
										td.visual__cell
							table.visual__table
								tbody.table__body
									tr.visual__row
										td.visual__cell 
										td.visual__cell 
										td.visual__cell 
									tr.visual__row
										td.visual__cell 
										td.visual__cell 
										td.visual__cell 
									tr.visual__row
										td.visual__cell 
										td.visual__cell 
										td.visual__cell 
						.positioning__switch
							.switch__block
								p.p.p--big По вертикали
								input#y-border.form__input.input--switch&attributes({
									type: "text",
									value: "12",
									name: "yBorder"
								})
								.switch__controls
									button.btn.btn--control.btn--up.js-switch-border(data-border="y-b-up") Больше
									button.btn.btn--control.btn--down.js-switch-border(data-border="y-b-down") Меньше
								.switch__block
								p.p.p--big По горизонтали
								input#x-border.form__input.input--switch&attributes({
									type: "text",
									value: "12",
									name: "xBorder"
								})
								.switch__controls
									button.btn.btn--control.btn--up.js-switch-border(data-border="x-b-up") Больше
									button.btn.btn--control.btn--down.js-switch-border(data-border="x-b-down") Меньше
			fieldset.form__block
				.block__header
					p.p Прозрачность
